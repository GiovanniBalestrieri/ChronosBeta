<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:padding="0dp"
        android:elevation="6dp">
        
        <LinearLayout
            android:id="@+id/layoutRecycleLicence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_below="@+id/thumbnail_card_offer"
                android:id="@+id/top_info_card"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_weight="10"
                android:layout_height="@dimen/offer_bottom_bar">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <!--
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/shop_logo_card_article"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>
                    -->

                    <ImageView
                        android:id="@+id/shop_logo_card_article"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="Logo"
                        android:scaleType="centerInside"
                        android:src="@drawable/logo" />


                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_width="0dip"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8">

                    <TextView
                        android:id="@+id/shop_top_card_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Nome negozio"
                        android:textColor="@color/black"
                        android:textSize="@dimen/shop_title_card"
                        android:textStyle="bold" />

                    <!--


                    <TextView
                        android:id="@+id/discount1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="Additional info"
                        android:textColor="@color/black"
                        android:textSize="@dimen/shop_title_card" />
                        -->

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"

                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <TextView
                        android:id="@+id/distance_logo_card_article"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="20m"
                        android:textColor="@color/orange2"
                        android:textSize="@dimen/article_title_card"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


            <View android:id="@+id/separator_top"
                android:background="@color/gray"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"/>


            <RelativeLayout
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#89969F">

                <!-- Thumbnail Image -->
                <ImageView
                    android:id="@+id/thumbnail_card_article"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/offer_cover_height"
                    android:background="@color/white"
                    android:clickable="true"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/drone" />

                <!--
                <LinearLayout
                    android:layout_below="@id/thumbnail_card_offer"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:background="@color/lic_card_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/title_card_offer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/offer_overlay_height"
                            android:paddingLeft="@dimen/city_title_padding"
                            android:paddingRight="@dimen/city_title_padding"
                            android:paddingTop="@dimen/city_title_padding"
                            android:paddingBottom="@dimen/city_title_padding"
                            android:text="Scapa"
                            android:maxLines="1"
                            android:textColor="@color/offer_title"
                            android:textStyle="bold"
                            android:textSize="@dimen/offer_title" />
                    </LinearLayout>

                </LinearLayout>
                        -->

            </RelativeLayout>

            <View android:id="@+id/separator_bot"
                android:background="@color/gray"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"/>

            <LinearLayout
                android:layout_margin="@dimen/card_margin"
                android:layout_below="@+id/thumbnail_card_offer"
                android:id="@+id/mid_info_card"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_weight="10"
                android:layout_height="@dimen/offer_bottom_bar">

                <!--
                <LinearLayout
                    android:layout_margin="@dimen/card_margin"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15">


                        <ImageView
                            android:id="@+id/shop_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:contentDescription="Logo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/logo" />


                </LinearLayout>

                -->


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_width="0dip"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <TextView
                        android:id="@+id/title_card_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="Titolo Offerta"
                        android:textColor="@color/black"
                        android:textSize="@dimen/article_title_card"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_weight="0.7"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/category_card_article"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="abbigliamento"
                            android:textColor="@color/black"
                            android:textSize="@dimen/article_cat_card" />


                        <TextView
                            android:id="@+id/price_card_article"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/fifty_dp"
                            android:gravity="center"
                            android:text="34,34"
                            android:textColor="@color/black"
                            android:textSize="@dimen/article_cat_card" />

                        <!--
                        <ImageView
                            android:id="@+id/thumbnail_card_article_cat"
                            android:layout_width="@dimen/fifty_dp"
                            android:layout_height="@dimen/offer_cover_height"
                            android:background="@color/white"
                            android:padding="0dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/abitiuomo" />
                            -->

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>



</LinearLayout>