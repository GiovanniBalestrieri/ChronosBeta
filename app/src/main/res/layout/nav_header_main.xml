<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_nav_profile"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/business_black"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/ly_PicProfileNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/heighty_dp"
            android:layout_height="@dimen/heighty_dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:padding="20dp"
            android:layout_marginTop="-60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_dummy"
            android:textColor="#CE1D23" />

    </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/five_dp"
            android:orientation="vertical">


                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User name"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_UserEmail"
                    android:gravity="center"
                    style="@style/simple_text_tweleve_threeLines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/padding_small"
                    android:text="Email address" />

        </LinearLayout>

</LinearLayout>
