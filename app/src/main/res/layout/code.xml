<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/linearLayout">


                <ImageView
                    android:layout_marginBottom="@dimen/logo_margin_bottom"
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"/>

            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F57C00"
                android:textStyle="bold"
                android:text="Tempus Fugit"
                android:textSize="23dp"/>
        -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/code"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:hint="@string/hint_invito" />

            </android.support.design.widget.TextInputLayout>

            <!--
             <EditText
                 android:layout_gravity="center"
                 android:id="@+id/code"
                 android:maxLength="6"
                 android:hint="Invito"
                 android:layout_width="match_parent"
                 android:layout_height="33dp"
                 android:layout_marginTop="@dimen/code_box_padding_top"
                 android:background="@color/white"
                 android:inputType="textPassword"
                 android:textSize="18dp"
                 android:ems="13"/>

                 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:text="Accedi"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_selector"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:id="@+id/action_code" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_invito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/no_invito_padding_top"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical">




            <TextView
                android:id="@+id/no_invito"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="Procedi senza"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>


        </LinearLayout>



    </LinearLayout>




</RelativeLayout>