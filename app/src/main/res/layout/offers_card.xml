<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:padding="0dp"
        android:elevation="6dp">
        
        <FrameLayout
            android:id="@+id/layoutRecycleLicence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#89969F">

                <!-- Thumbnail Image -->
                <ImageView
                    android:id="@+id/thumbnail_card_offer"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="@dimen/offer_cover_height"
                    android:src="@drawable/giacca_u"
                    android:clickable="true"
                    android:padding="0dp"/>

            </RelativeLayout>
            
            <LinearLayout
                android:layout_below="@id/thumbnail_card_offer"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:background="@color/lic_card_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/title_card_offer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/offer_overlay_height"
                            android:paddingLeft="@dimen/city_title_padding"
                            android:paddingRight="@dimen/city_title_padding"
                            android:paddingTop="@dimen/city_title_padding"
                            android:paddingBottom="@dimen/city_title_padding"
                            android:text="Giacca"
                            android:maxLines="1"
                            android:textColor="@color/offer_title"
                            android:textStyle="bold"
                            android:textSize="@dimen/offer_title" />

                    <!--

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title"
                            android:textColor="@color/lic_title"
                            android:paddingBottom="@dimen/num_count_padding_bottom"
                            android:paddingLeft="@dimen/city_title_padding"
                            android:paddingRight="@dimen/city_title_padding"
                            android:textSize="@dimen/num_count" />
-->

                </LinearLayout>

                <ImageView
                    android:id="@+id/overflow_card_offer"
                    android:layout_width="@dimen/lic_ic_overflow_width"
                    android:layout_height="@dimen/lic_ic_overflow_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/lic_ic_overflow_margin_top"
                    android:layout_marginRight="@dimen/lic_ic_overflow_margin_right"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dots" />

            </LinearLayout>

    </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>