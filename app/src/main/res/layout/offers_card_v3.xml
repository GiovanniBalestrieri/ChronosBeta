<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="6dp"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/layoutRecycleLicence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_info_card_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail_card_offer"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                tools:ignore="ObsoleteLayoutParam">


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/top_info_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:layout_weight="0.7"
                        android:background="@color/white"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/first_top_card_article"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:src="@drawable/ic_timer_black_18dp" />

                        <TextView
                            android:id="@+id/timeout_card_offer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:text="45 min"
                            android:textColor="@color/black"
                            android:textSize="@dimen/timer_text_size_card"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/third_top_card_article"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp" />


                        <!--
                        <ImageView
                            android:id="@+id/thumbnail_card_article_cat"
                            android:layout_width="@dimen/fifty_dp"
                            android:layout_height="@dimen/offer_cover_height"
                            android:background="@color/white"
                            android:padding="0dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/abitiuomo" />
                            -->

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_weight="10"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#89969F">

                <!-- Thumbnail Image -->
                <ImageView
                    android:id="@+id/thumbnail_card_article"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/offer_cover_height"
                    android:background="@color/white"
                    android:clickable="true"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test4" />

                <!--
                <LinearLayout
                    android:layout_below="@id/thumbnail_card_offer"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:background="@color/lic_card_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/title_card_offer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/offer_overlay_height"
                            android:paddingLeft="@dimen/city_title_padding"
                            android:paddingRight="@dimen/city_title_padding"
                            android:paddingTop="@dimen/city_title_padding"
                            android:paddingBottom="@dimen/city_title_padding"
                            android:text="Scapa"
                            android:maxLines="1"
                            android:textColor="@color/offer_title"
                            android:textStyle="bold"
                            android:textSize="@dimen/offer_title" />
                    </LinearLayout>

                </LinearLayout>
                        -->

            </RelativeLayout>

            <View
                android:id="@+id/separator_bot"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/top_info_card_ll_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/twenty_five_dp"
                android:layout_weight="10"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shop_top_card_info"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="lobster_regular"
                        android:gravity="center"
                        android:paddingLeft="@dimen/twenty_dp"
                        android:text="L'atelier des penseurs"
                        android:textColor="@color/grey_midx2"
                        android:textSize="@dimen/shop_title_card" />

                    <!--


                    <TextView
                        android:id="@+id/discount1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="Additional info"
                        android:textColor="@color/black"
                        android:textSize="@dimen/shop_title_card" />
                        -->

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"

                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center">


                    <TextView
                        android:id="@+id/distance_logo_card_article"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="20m"
                        android:textColor="@color/orange2"
                        android:textSize="@dimen/article_title_card"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mid_info_card"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail_card_offer"
                android:layout_marginBottom="@dimen/twenty_five_dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                tools:ignore="ObsoleteLayoutParam">

                <!--
                <LinearLayout
                    android:layout_margin="@dimen/card_margin"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15">


                        <ImageView
                            android:id="@+id/shop_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:contentDescription="Logo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/logo" />


                </LinearLayout>

                -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/price_card_article"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="34,34 €"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="left|center"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_discount_offer_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="20 %"
                            android:textColor="@color/black"
                            android:textSize="@dimen/register_main_text_margin"
                            android:textStyle="bold" />

                    </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="left|center"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_final_price_card"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="28 €"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>
                <!--

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_weight="0.7"
                    android:gravity="center">



                    <ImageView
                        android:id="@+id/thumbnail_card_article_cat"
                        android:layout_width="@dimen/fifty_dp"
                        android:layout_height="@dimen/offer_cover_height"
                        android:background="@color/white"
                        android:padding="0dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/abitiuomo" />

                </LinearLayout>


                </LinearLayout>
            -->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/action_info_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:layout_weight="0.7"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/first_action_card_article"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/fifteen_dp"
                    android:paddingStart="@dimen/fifteen_dp"
                    android:text="Prenota"
                    android:textAllCaps="true"
                    android:textColor="@color/blue2"
                    android:textSize="@dimen/shop_title_card" />

                <TextView
                    android:id="@+id/second_action_card_article"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/register_main_text_margin"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/third_action_card_article"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <!--
                        <ImageView
                            android:id="@+id/thumbnail_card_article_cat"
                            android:layout_width="@dimen/fifty_dp"
                            android:layout_height="@dimen/offer_cover_height"
                            android:background="@color/white"
                            android:padding="0dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/abitiuomo" />
                            -->

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>