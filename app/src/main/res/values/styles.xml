<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/darkblue</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActionDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/ActionDialogAnimation</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="ActionDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>


    <style name="DialogAnimationUpDown">
        <item name="android:windowEnterAnimation">@anim/slide_up_new</item>
        <item name="android:windowExitAnimation">@anim/slide_down_new</item>
    </style>


    <style name="top_heading">
        <item name="android:background">@color/white_100_percent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/app_text_size</item>
    </style>

    <style name="simple_text_tweleve_threeLines">
        <item name="android:textColor">@color/gray</item>
        <item name="android:maxLines">3</item>
        <item name="android:minLines">1</item>
        <item name="android:textSize">@dimen/app_text_sub_heading_size</item>
    </style>


    <style name="top_heading_fourteen">
        <!-- <item name="android:background">@color/white_100_percent</item> -->
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/app_text_size_small</item>
    </style>

    <style name="top_heading_twenty_white">
        <item name="android:background">@color/full_transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/app_text_title_bar_size</item>
    </style>

    <style name="simple_text_ten">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/app_med_hint_size</item>
    </style>

    <style name="simple_text_ten_white">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white_100_percent</item>
        <item name="android:textSize">@dimen/app_med_hint_size</item>
    </style>

    <style name="simple_text_ten_orange">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/app_med_hint_size</item>
    </style>

    <style name="simple_text">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/app_text_med_sub_heading_size</item>
    </style>


    <style name="text_white_normal_style">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white_100_percent</item>
        <item name="android:textSize">@dimen/twelve_sp</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/app_text_size_small</item>
        <item name="android:background">@drawable/fb_new</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Base application theme. -->
    <style name="articleTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/gray_back</item>
        
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>